---------------------------------------------------------------------------------------------------
-- global declarations
---------------------------------------------------------------------------------------------------

rollout ro1 "Options" width:162 height:311
(
	---------------------------------------------------------------------------------------------------
	-- declarations
	---------------------------------------------------------------------------------------------------
	local rndArr=#("S","A","R"), i=1


	---------------------------------------------------------------------------------------------------
	-- Interface
	---------------------------------------------------------------------------------------------------

	button btn1 "S" pos:[8,8] width:16 height:16
	checkbutton ckb1 "S" highlightcolor:(color 255 128 128) pos:[24,8] width:16 height:16 checked:true
	
	---------------------------------------------------------------------------------------------------
	-- Functions
	---------------------------------------------------------------------------------------------------



	---------------------------------------------------------------------------------------------------
	-- Handlers
	---------------------------------------------------------------------------------------------------


	on btn1 pressed  do
	(
		i+=1
		if i > rndArr.count then i = 1
		btn1.text = rndArr[i]
		btn1.enabled=false
		btn1.enabled=true
	)
	on ckb1 changed state do
	(
		i+=1
		if i > rndArr.count then i = 1
		ckb1.text = rndArr[i]
		ckb1.checked=true
		ckb1.highlightcolor=(color 128 128 255)
	)

)

if myFloater != undefined then closerolloutfloater myFloater
	myFloater = newRolloutFloater "My Floater" 188 500 
addRollout ro1 myFloater

